---
import Menu from "@icons/Menu.astro";
import { Image } from "astro:assets";
import type { HeaderProps } from "@types";

type Props = HeaderProps;

const { siteLogo, navLinks } = Astro.props;
---

<!-- Desktop -->
<aside class="hidden xl:block fixed left-0 top-0 h-screen w-64 2xl:w-96 bg-light-blue p-8 overflow-y-auto ">
  <div class="sticky top-8">
    <a href="/" aria-label="Home Link">

      <h1 class="font-serif text-center text-6xl 2xl:text-8xl text-dark-blue mb-2">
        Senne<br/>Wander
      </h1>
    </a>
    
    <div class="my-6 bg-light-blue flex justify-center flex-shrink">
      <a href="/" aria-label="Home Link">
        <Image
          class="flex mix-blend-color-burn transition-all duration-300 hover:contrast-150"
          width="230"
          height="230"
          src={siteLogo}
          alt="website logo"
          loading={"eager"} 
        />
      </a>
    </div>

    <!-- Desktop Navigation -->
    <nav class="mt-8">
      <ul class="space-y-3 flex flex-col text-center">
        {navLinks.map((link) => (
          <li>
            <a 
              class="nav-item block p-2 2xl:p-3 rounded-md text-sm font-bold text-brown text-[22px] 2xl:text-[24px] cursor-pointer transition-all duration-300  hover:underline hover:text-blue"
              href={link.href}
              data-astro-reload
            >
              {link.text}
            </a>
          </li>
        ))}
      </ul>
    </nav>
  </div>
</aside>

<!-- Mobile Header -->
<header
  class="xl:hidden sticky top-0 z-50 mx-auto flex items-center max-w-xl animate-slide-in justify-between bg-offwhite px-6 py-4 rounded-md"
>
  <a href="/" aria-label="Home link">
    <Image
      class="flex justify-center rounded-full mix-blend-hard-light contrast-120 duration-500 hover:contrast-150"
      src={siteLogo}
      width="125"
      height="125"
      alt="website logo"
      loading={"eager"}
    />
  </a>
  <button
    type="button"
    id="menu-button"
    class="p-4 text-neutral sm:hidden touch-manipulation min-w-[48px] min-h-[48px] flex items-center justify-center"
    aria-expanded="false"
    aria-controls="main-menu"
    aria-label="Toggle menu"
  >
    <Menu />
  </button>
  <!-- Mobile Nav -->
  <nav
    class="absolute top-20 left-1/2 -translate-x-1/2 w-[calc(100%-2.5rem)] hidden rounded-2xl border border-neutral/40 bg-offwhite px-4 py-5 text-brown sm:static sm:left-auto sm:translate-x-0 sm:w-auto sm:flex sm:border-0 sm:bg-transparent sm:p-0"
    id="main-menu"
  >
    <ul class="flex flex-col gap-2 sm:flex-row sm:items-center">
      {
        navLinks.map((link) => (
          <li class="relative flex items-center">
            <a 
              class="nav-item relative block p-2 rounded-md text-sm font-medium text-center transition-all duration-500 after:absolute after:bottom-0 after:left-2/4 after:h-2 after:w-1 after:-translate-x-2/4 after:text-brown after:opacity-0 after:content-['â€¢'] hover:text-[var(--text-brown)]" 
              href={link.href}
              data-astro-reload
            >
              {link.text}
            </a>
          </li>
        ))
      }
    </ul>
  </nav>
</header>

<script>
  // Toggle mobile menu
  const button = document.querySelector("#menu-button");
  const menu = document.querySelector("#main-menu");
  const navItems = document.querySelectorAll("#main-menu a.nav-item");

  const toggleMenu = () => {
    menu?.classList.toggle("hidden");
    const isHidden = menu?.classList.contains("hidden");
    button?.setAttribute("aria-expanded", `${!isHidden}`);
  };

  button?.addEventListener("click", toggleMenu);

  // Close menu when a nav item is clicked (mobile only)
  navItems.forEach((item) => {
    item?.addEventListener("click", () => {
      // Only toggle on mobile (when menu button is visible)
      if (window.innerWidth < 640 && !menu?.classList.contains("hidden")) {
        toggleMenu();
      }
    });
  });

  // Update navigation based on scroll position with Intersection Observer
  const observer = new IntersectionObserver(
    (entries) => {
      entries.forEach((entry) => {
        if (entry.isIntersecting) {
          navItems.forEach((item) => {
            const href = item.getAttribute("href");
            if (href === `#${entry.target.id}`) {
              item.classList.add("text-black", "md:after:opacity-100");
              item.classList.remove("text-brown");
            } else {
              item.classList.remove("text-black", "md:after:opacity-100");
              item.classList.add("text-brown");
            }
          });
        }
      });
    },
    { 
      threshold: 0.5,
      rootMargin: "-100px 0px -100px 0px"
    }
  );

  // Observe all sections
  document.querySelectorAll("section[id]").forEach((section) => {
    observer.observe(section);
  });

  // Cleanup observer
  document.addEventListener("visibilitychange", () => {
    if (document.visibilityState === "hidden") {
      observer.disconnect();
    } else {
      document.querySelectorAll("section[id]").forEach((section) => {
        observer.observe(section);
      });
    }
  });
</script>

<style>
  header {
    animation-timeline: scroll();
    animation-range: 0 650px;
  }
</style>
