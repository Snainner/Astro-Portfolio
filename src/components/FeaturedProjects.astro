---
import Section from "./Section.astro";
import { Image} from "astro:assets";

import { getCollection, type CollectionEntry } from 'astro:content';

const posts = await getCollection('posts');

---
<html>

  <Section text="Featured Projects" href="projects">
  
    <!-- Featured Projects Grid -->
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6  md:gap-12 place-items-center px-6">                    
      {posts
      .filter((post: CollectionEntry<'posts'>) => post.data.featured === true)
      .map((post: CollectionEntry<'posts'>) => (
      
      <div class=" p-5">
      <a 
      href={`/${post.slug}`}
      class="group block bg-white rounded-xl overflow-hidden shadow-sm hover:shadow-xl transition-all duration-300 hover:-translate-y-1"
      >
        <div class="aspect-4/3 w-full overflow-hidden bg-white items-center p-4">
          <Image
            src = {post.data.image}
            alt={post.data.title}
            width="400"
            height="400"
            loading="lazy"
            class="w-full h-full object-cover rounded-lg group-hover:scale-105 transition-transform duration-300"
            />
        </div>
        
        <div class="p-4">
          <h2 class="text-lg md:text-xl text-center font-semibold text-brown mb-5">
            {post.data.title}
          </h2>
        </div>
      </a>
    </div>
    ))}
</div>
  <!-- View All Projects Button -->
  <div class="text-center mt-8">
    <a 
    href="/projects"
    class="inline-flex items-center gap-2 px-6 py-3 bg-offwhite text-brown rounded-full hover:bg-brown hover:text-offwhite transition-all duration-300"
    >
    View All Projects
    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
    </svg>
  </a>
</div>
  </Section>
</html>