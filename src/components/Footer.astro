---
import type { SiteConfig } from "@types";
import MntDivider from 'assets/mntDivider.svg';

type Props = Pick<SiteConfig, "author" | "socialLinks">;

const { author, socialLinks } = Astro.props;
const currentYear = new Date().getFullYear();
---
<section class="overflow-x-hidden">

  <div class="overflow-x-hidden w-full relative -mb-1 -z-10 md:w-[110vw] md:-left-[5vw] md:-mb-10">
    <MntDivider class="w-full h-auto svg-fill" />
  </div>
  <footer
  class="w-full  px-5 pt-5 pb-8 text-center text-[var(--text-brown)] bg-[var(--bg-offwhite)]"
  >
  
  <ul class="mb-5 flex flex-wrap justify-center gap-x-5 text-xs md:text-sm">
    {
      socialLinks.map(({ text, href }) => (
        <li>
          <a
            href={href}
            target="_blank"
            class="inline-block px-4 py-3 underline after:relative after:bottom-[-4px] after:content-[url(/external.svg)] hover:text-primary"
            >
            {text}
          </a>
        </li>
      ))
    }
  </ul>
  <p class="text-xs">
    {author} Â© {currentYear}. <span class="text-[var(--text-brown)] font-medium" 
    >Designed by</span
    > Senne Wander
  </p>
</footer>
</section>
