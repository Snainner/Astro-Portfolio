---
interface Props {
  text: string;
  href: string;
  description: string;
}

const { text, href, description } = Astro.props;
---

<section id={href} class="flex flex-col items-center gap-12 mb-4 md:mb-16 px-4 sm:px-6 md:px-8">
    <div class="w-full max-w-7xl space-y-6 sm:space-y-0 sm:flex sm:flex-row sm:gap-6 md:gap-12">

        <h2 class="flex-1 sm:text-left flex-1 mb-8 font-sans text-2xl sm:text-5xl md:text-6xl font-semibold tracking-tighter text-light-green">
            {text}
        </h2>
        <div class="flex-1 space-y-4 text-sm sm:text-base leading-relaxed">
            <p class="text-base text-light-green">
                {description}
            </p>
        </div>
    </div>
  <slot />
  
</section>
