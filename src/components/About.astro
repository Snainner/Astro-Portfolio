---
import type { AboutProps, HeroProps } from "@types";
import RowSection from "./RowSection.astro";
import Divider from "./Divider.astro";
import RoundedImage from "./RoundedImage.astro";


type Props = AboutProps & Pick<HeroProps, "name">;

const { description, image } = Astro.props;
---
  
<!-- Image -->
<RoundedImage img={image} alt="about"/>
<Divider/>
<!-- About section -->
<RowSection text="About Me" href="abouttext" description={description}>
  




